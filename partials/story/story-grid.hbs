<article class="story u-relative">
    <a href="{{url}}"  class="story-image u-relative u-borderLighter u-bgColorGrayLight u-block u-overflowHidden">
        {{!-- Imagenes --}}
        {{#if feature_image}}
            <img class="story-img u-absolute u-image u-block blur-up lazyload"
                src="{{img_url feature_image size="m"}}"
                srcset="{{img_url feature_image size="xxs"}}"
                data-srcset="{{img_url feature_image size="s"}} 300w,{{img_url feature_image size="m"}} 600w"
                data-sizes="(max-width: 1000px) 400px, 600px"
                alt="{{title}}"
            />
        {{else}}
            <div class="u-absolute0 u-block u-bgCover not-image"></div>
        {{/if}}

        {{!-- icon star if is featured post --}}
        {{#if featured}}<span class="story-icon-featured u-absolute u-textColorWhite i-star-line"></span>{{/if}}
    </a>
    <section class="story-body u-paddingTop15">
        <a href="{{url}}"><h2 class="story-title u-contentTitle u-fontSize22 u-lineHeight1">{{title}}</h2></a>
        <a href="{{url}}"><p class="story-excerpt u-fontSizeSmall u-marginBottom20">{{excerpt words="12"}}</p></a>

        {{!-- Author Meta --}}
        <div class="u-flexCenter u-fontSize15">
            {{^is "author"}}

            {{#primary_author}}
            <img class=" u-image avatar-image img-s u-round lazyload" style="margin-right:5px" data-src="{{#if profile_image}}{{img_url profile_image size="xxs"}}{{else}}{{asset "images/avatar.png"}}{{/if}}" alt="{{name}}"/>
            <a href="{{url}}" class="link--underline u-textColorDarker" style="margin-right:5px">{{name}}</a>
            {{/primary_author}}

            <time class="datetime u-textCapitalize u-textColorNormal" datetime="{{date format=" YYYY-MM-DD "}}">{{date published_at format="MMMM DD, YYYY"}}</time>
            {{else}}

            {{!-- Datetime - ReadingTime - partials/helper/helper-datetime.hbs --}}
            {{> "helper/helper-datetime"}}
            {{/is}}

        </div>
    </section>
</article>
